<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/margin_16</item>
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="MaterialField_TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintTextColor">@color/subtitle</item>
    </style>

    <style name="MaterialField_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Onboard_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="Onboard_Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>

    <style name="Bottom_Navigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/Item_Text_Active</item>
        <item name="itemTextAppearanceInactive">@style/Item_Text_Inactive</item>
    </style>

    <style name="Item_Text_Active" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Item_Text_Inactive" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>
</resources>