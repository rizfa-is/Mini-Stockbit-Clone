<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_50"
        tools:context=".RegisterFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btn_back"
                android:layout_width="@dimen/margin_30"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_back" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/daftar"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:id="@+id/btn_consultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_headset" />
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_4"
            app:cardBackgroundColor="?attr/colorPrimaryVariant"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="@dimen/margin_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_16"
                android:src="@drawable/ic_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_regular"
                android:text="Daftar dengan Google" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_4"
            app:cardBackgroundColor="?attr/colorPrimaryVariant"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="@dimen/margin_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_google">

            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_12"
                android:src="@drawable/ic_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_regular"
                android:text="Daftar dengan Facebook" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/raleway_regular"
            android:text="Atau"
            android:textColor="@color/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_facebook" />

        <View
            android:id="@+id/midline_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_1"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_4"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <View
            android:id="@+id/midline_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_1"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_4"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register_email"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_60"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_4"
            android:backgroundTint="@color/theme_green"
            android:fontFamily="@font/raleway_bold"
            android:text="Daftar dengan Email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/margin_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/tv_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:gravity="end"
            android:fontFamily="@font/raleway_bold"
            android:text="Sudah punya akun?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vw_blank"
            app:layout_constraintTop_toBottomOf="@+id/btn_register_email" />

        <View
            android:id="@+id/vw_blank"
            android:layout_width="@dimen/margin_1"
            android:layout_height="@dimen/margin_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_already_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_already_account"
            app:layout_constraintTop_toTopOf="@+id/tv_already_account" />

        <TextView
            android:id="@+id/tv_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:fontFamily="@font/raleway_bold"
            android:text="Masuk"
            android:textColor="@color/theme_green"
            app:layout_constraintStart_toEndOf="@+id/tv_already_account"
            app:layout_constraintTop_toTopOf="@+id/tv_already_account" />

        <TextView
            android:id="@+id/tv_disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="@string/disclaimer"
            android:textSize="@dimen/text_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>